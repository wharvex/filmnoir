<%- include('partials/head', { pageTitle: filmData.title }) %>
<%- include('partials/navbar', { secPic: secPics[0], activeArr: ["", "", "", ""] }) %>
<div class="container">
    <%- include('partials/titleboxposter', { pageTitle: filmData.title, mainPic: mainPic, credits: credits }) %>
    <div class="row mt-4">
        <div class="col text-center">
            <h2 class="display-5 mb-2">Themes</h3>
        </div>
    </div>
    <div class="row d-flex justify-content-evenly">
        <% for (let i=0; i<filmData.themes.length; i++) { %>
        <% if (i>2 && i%3===0) { %>
        <div class="row d-flex justify-content-evenly">
            <%- include('partials/themecard', {i}) %>
            <% } else if (i>1 && (i+1)%3===0) { %>
            <%- include('partials/themecard', {i}) %>
        </div>
        <% } else { %>
        <%- include('partials/themecard', {i}) %>
        <% } %>
        <% } %>
    </div>
</div>
</div>
<%- include('partials/footer', { secPic1: secPics[1], secPic2: secPics[2] }) %>