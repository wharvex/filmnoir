<%- include('partials/head', { pageTitle: themeData.name }) %>
<%- include('partials/navbar', { secPic: secPics[0], activeArr: ["", "", "", ""] }) %>
<div class="container mb-5">
    <div class="row pt-2 pb-3 border-bottom d-flex justify-content-around">
        <div class="col-xl-5 d-flex flex-column align-items-center text-center">
            <figure class="figure mb-0">
                <img src=<%= mainPic.picUrl %> class="figure-img img-fluid rounded mainPic" alt=<%= mainPic.tooltip %>
                    title=<%= mainPic.tooltip %>>
                <figcaption class="figure-caption text-center"><%= mainPic.caption %>
                </figcaption>
            </figure>
        </div>
        <div class="col-xl-5 d-flex flex-column justify-content-evenly align-items-center text-center">
            <h1 class="display-4 fw-bold">
                <%= themeData.name %>
            </h1>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= themeData.description %>
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <% for (let header of tableData[0]) { %>
                        <th scope="col">
                            <%= header %>
                        </th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% for (let film of tableData[1]) { %>
                    <tr>
                        <% for (let credit of film) { %>
                        <td>
                            <% if (credit===themeFilms[tableData[1].indexOf(film)].title) { %>
                            <a href=<%= "/f/"+themeFilms[tableData[1].indexOf(film)].path %>>
                                <%= credit %>
                            </a>
                            <% } else { %>
                            <%= credit %>
                            <% } %>
                        </td>
                        <% } %>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/footer', { secPic1: secPics[1], secPic2: secPics[2] }) %>